<div class="container mt-4">
  <h1 class="mb-4 fw-bold text-success">Create New Post</h1>

  <div class="card shadow-sm p-4">
    <%= form_with(model: @post, local: true, html: { multipart: true }) do |form| %>
      
      <!-- Post content -->
      <div class="mb-3">
        <%= form.label :content %>
        <%= form.text_area :content, class: "form-control", placeholder: "What's on your mind?" %>
      </div>

      <!-- Image upload -->
      <div class="mb-3">
        <%= form.label :image, "Upload an image" %>
        <%= form.file_field :image, class: "form-control" %>
      </div>

      <!-- Video upload -->
      <div class="mb-3">
        <%= form.label :video, "Upload a video (MP4 only)" %>
        <%= form.file_field :video, accept: "video/mp4", class: "form-control" %>
      </div>

      <!-- Submit -->
      <div>
        <%= form.submit "Create Post", class: "btn btn-success" %>
      </div>

    <% end %>
  </div>
</div>
